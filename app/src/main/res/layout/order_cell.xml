<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cellImage1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="1dp"
        android:src="@drawable/destiny"
        app:civ_border_color="@color/bright_pink"
        app:civ_border_width="3dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/cellOrderUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="UserId"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/star"
                android:paddingEnd="9dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/cellOrderRating"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Ra"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_gravity="right"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/cellOrderType"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="type"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>

    <TextView
        android:id="@+id/cellOrderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="22dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:text="title"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/cellOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Date"
        android:textColor="@color/black"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="22dp"
        android:textSize="21sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/cellOrderDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Description"
        android:textColor="@color/black"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="22dp"
        android:textSize="21sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="200dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/money"/>


        <TextView
            android:id="@+id/cellOrderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:text="price"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>