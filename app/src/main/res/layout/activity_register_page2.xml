<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".GeneralModule.RegisterPage2"
    >


    <Button
        android:id="@+id/dateButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="102dp"
        android:backgroundTint="@color/gr"
        android:onClick="DataChoose"
        android:padding="10dp"
        android:text="JAN 01 2023"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InfoTitle"
        app:layout_constraintVertical_bias="0.214" />

    <TextView
    android:id="@+id/InfoTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:layout_marginStart="40dp"
    android:layout_marginTop="90dp"
    android:text="Basic Information"
    android:textColor="@color/black"
    android:textSize="25dp"


    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/AddressEDIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="320dp"
        android:hint="Address"
        android:minWidth="100dp"
        android:minHeight="30dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/GenderEDIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="36dp"
        android:hint="Gender"
        android:minWidth="100dp"
        android:minHeight="30dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Phone_NN" />

    <EditText
        android:id="@+id/Phone_NN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="36dp"
        android:hint="Phone Number"
        android:minWidth="100dp"
        android:minHeight="30dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddressEDIT" />

    <Button
    android:id="@+id/UploadPhoto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginEnd="44dp"

    android:layout_marginBottom="120dp"
    android:backgroundTint="#FDD184"
    android:text="====>"
    android:textColor="@color/black"
    android:textStyle="bold"


    app:cornerRadius="20dp"

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
        android:onClick="ContinueRegister"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="35dp"
        android:layout_height="38dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="52dp"
        android:src="@drawable/location_icon"
        app:layout_constraintEnd_toStartOf="@+id/AddressEDIT"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="33dp"
        android:layout_height="38dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="52dp"
        android:src="@drawable/phone_icon"
        app:layout_constraintEnd_toStartOf="@+id/Phone_NN"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="52dp"
        android:src="@drawable/gender_icon"
        app:layout_constraintEnd_toStartOf="@+id/GenderEDIT"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

</androidx.constraintlayout.widget.ConstraintLayout>