<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GeneralModule.RegisterPage2"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bright_pink"
        android:minHeight="?actionBarSize"
        android:elevation="10dp"
        android:theme="?actionBarTheme">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            app:srcCompat="@drawable/icon_left_arrow"
            android:onClick="backButton4"/>

        <TextView
            android:id="@+id/InfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Information"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:src="@drawable/icon_birthday"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"/>

        <Button
            android:id="@+id/dateButton2"
            android:layout_width="233dp"
            android:layout_height="50dp"
            android:background="@drawable/enter_email"
            android:onClick="DataChoose"
            android:text="Birthday"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:src="@drawable/location_icon"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="50dp"/>

        <EditText
            android:id="@+id/AddressEDIT"
            android:layout_width="233dp"
            android:layout_height="50dp"
            android:hint="Address"
            android:background="@drawable/enter_email"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="33dp"
            android:layout_height="38dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/phone_icon"
            />

        <EditText
            android:id="@+id/Phone_NN"
            android:layout_width="233dp"
            android:layout_height="50dp"
            android:hint="Phone Number"
            android:background="@drawable/enter_email"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="33dp"
            android:layout_height="38dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/gender_icon"/>

        <RadioGroup
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/maleButton"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/left_order_button_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:onClick="rdButton1"
                android:text="Male"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/femaleButton"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/right_order_button_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:onClick="rdButton1"
                android:text="Female"
                android:textColor="@color/black" />
        </RadioGroup>

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="50dp"
        >


        <Button
            android:id="@+id/UploadPhoto"
            android:layout_width="130dp"
            android:layout_height="66dp"
            android:layout_centerInParent="true"
            android:backgroundTint="#FDD184"
            android:onClick="ContinueRegister"
            android:text="Next"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:cornerRadius="20dp" />
    </RelativeLayout>




</LinearLayout>
