<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.wallet.TopUpProcess"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="150dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            >

            <EditText
                android:id="@+id/enterTopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:ems="10"
                android:hint="Enter the number"
                android:inputType="number"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/minimumNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:text="@string/minimumTopup" />

        </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:columnCount="3"
        android:rowCount="2">


        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:onClick="button1btn"
            android:text="50"
            android:textSize="@dimen/button_front_size_samll" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:onClick="button2btn"
            android:text="100"
            android:textSize="@dimen/button_front_size_samll" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:onClick="button3btn"
            android:text="150"
            android:textSize="@dimen/button_front_size_samll" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:onClick="button4btn"
            android:text="200"
            android:textSize="@dimen/button_front_size_samll" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_selector"
            android:gravity="center"

            android:onClick="button5btn"
            android:text="250"

            android:textSize="@dimen/button_front_size_samll" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:onClick="button6btn"
            android:text="300"
            android:textSize="@dimen/button_front_size_samll" />

    </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <Button
                android:id="@+id/confirmTopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@drawable/shape_button"
                android:onClick="confirmTopupOn"/>

        </LinearLayout>




    </LinearLayout>