<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Frame"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".GeneralModule.MainLobbyRegistration"
    >


<Button
    android:id="@+id/Customer_Button"
    android:layout_width="wrap_content"
    android:layout_height="66dp"
    android:layout_marginTop="532dp"
    android:backgroundTint="#FDD184"
    android:fontFamily="sans-serif"
    android:text="Customer"
    android:textAlignment="center"
    android:textColor="#000000"
    android:textSize="20sp"
    android:textStyle="bold|italic"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:onClick="LobbyPageCustomer"/>

<Button
    android:id="@+id/Worker_Button"
    android:layout_width="154dp"
    android:layout_height="66dp"
    android:layout_marginTop="24dp"
    android:backgroundTint="#FDD184"
    android:fontFamily="sans-serif"
    android:text="Worker"
    android:textAlignment="center"
    android:textColor="#000000"
    android:textSize="20sp"
    android:textStyle="bold|italic"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Customer_Button"
    android:onClick="LobbyPageWorker"/>

<ImageView
    android:id="@+id/imageView"
    android:layout_width="430dp"
    android:layout_height="521dp"
    android:src="@drawable/destiny"
    android:contentDescription="Login Pic"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/Des"
    android:layout_width="75dp"
    android:layout_height="39dp"
    android:layout_marginStart="96dp"

    android:layout_marginTop="124dp"
    android:text="Des"
    android:textAlignment="textEnd"
    android:textColor="#FA3131"
    android:textSize="30sp"

    app:layout_constraintHeight_percent="0.8"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_percent="0.9" />

<TextView
    android:id="@+id/Tiny"
    android:layout_width="75dp"
    android:layout_height="45dp"
    android:layout_marginTop="124dp"
    android:layout_marginEnd="96dp"
    android:text="Tiny."
    android:textAlignment="viewStart"
    android:textColor="#000000"
    android:textSize="30sp"


    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/Des"
    app:layout_constraintTop_toTopOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>